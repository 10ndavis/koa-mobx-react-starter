{
  "env": {
    "server": {
      "presets": [
        "stage-3",
        "es2015",
        "react"
      ],
      "plugins": [
        "transform-decorators-legacy",
        "react-hot-loader/babel",
        "transform-regenerator"
      ]
    },

    "client": {
      "presets": [
        "es2015-webpack",
        "react"
      ],
      "plugins": [
        "transform-decorators-legacy",
        "react-hot-loader/babel"
      ]
    },

    "client-build": {
      "presets": [
        "es2015-webpack",
        "react"
      ],
      "plugins": [
        "transform-decorators-legacy"
      ]
    }
  }
}